<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/top_yellow"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent="0.15"
        android:id="@+id/topView"/>
    <org.qiah.balabala.util.IconFont
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/topView"
        app:layout_constraintBottom_toBottomOf="@id/topView"
        app:layout_constraintVertical_bias="0.65"
        android:id="@+id/backIcon"
        android:layout_marginStart="8dp"
        android:textSize="@dimen/big_icon_size"
        android:textColor="@color/common_text_white"
        android:text="@string/icon_back"/>
    <TextView
        android:id="@+id/nameTv"
        app:layout_constraintTop_toTopOf="@id/backIcon"
        app:layout_constraintBottom_toBottomOf="@id/backIcon"
        app:layout_constraintStart_toEndOf="@id/backIcon"
        android:layout_marginStart="8dp"
        android:textColor="@color/common_text_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chatRv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/bg_grey"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@id/actionRcl"
        app:layout_constraintTop_toBottomOf="@id/topView"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="16dp" />

    <org.qiah.balabala.util.RoundConstraintLayout
        android:id="@+id/actionRcl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/chatRv"
        app:layout_constraintBottom_toTopOf="@id/emojiRv">
        <TextView
            android:layout_width="0dp"
            app:layout_constraintWidth_percent="0.2"
            android:gravity="center"
            android:padding="4dp"
            android:background="@drawable/bg_select_btn"
            android:layout_height="wrap_content"
            android:text="消息"
            android:textColor="@color/common_text_black"
            android:id="@+id/tv1"
            android:elevation="2dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv2"/>
        <TextView
            android:layout_width="0dp"
            app:layout_constraintWidth_percent="0.2"
            android:gravity="center"
            android:padding="4dp"
            android:background="@drawable/bg_unselect_btn"
            android:layout_height="wrap_content"
            android:text="事件"
            android:textColor="@color/common_text_white"
            android:id="@+id/tv2"
            app:layout_constraintTop_toTopOf="@id/tv1"
            app:layout_constraintStart_toEndOf="@id/tv1"
            app:layout_constraintEnd_toStartOf="@id/tv3"/>
        <TextView
            android:layout_width="0dp"
            app:layout_constraintWidth_percent="0.2"
            android:gravity="center"
            android:padding="4dp"
            android:background="@drawable/bg_unselect_btn"
            android:layout_height="wrap_content"
            android:text="分割"
            android:textColor="@color/common_text_white"
            android:id="@+id/tv3"
            app:layout_constraintTop_toTopOf="@id/tv1"
            app:layout_constraintStart_toEndOf="@id/tv2"
            app:layout_constraintEnd_toEndOf="parent"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:id="@+id/selectNikkeCL"
            android:visibility="gone"
            android:layout_height="100dp"

            app:layout_constraintTop_toBottomOf="@id/tv1"/>
        <org.qiah.balabala.util.RoundConstraintLayout
            android:id="@+id/inputRcl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:elevation="12dp"
            android:layout_margin="12dp"
            app:round_corner="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/round_grey_12"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/selectNikkeCL">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/avatarIv"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@drawable/round_yellow"
                />
            <EditText
                android:layout_width="0dp"
                android:minHeight="40dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:hint="请输入"
                android:padding="4dp"
                android:id="@+id/sendEt"
                android:background="@drawable/round_white_12"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toStartOf="@id/pictureIcon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/avatarIv"/>
            <org.qiah.balabala.util.IconFont
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/icon_picture"
                android:textColor="@color/icon_grey"
                android:layout_marginEnd="8dp"
                android:id="@+id/pictureIcon"
                android:textSize="@dimen/mid_icon_size"
                app:layout_constraintEnd_toStartOf="@id/sendBtn"
                app:layout_constraintTop_toTopOf="@id/sendBtn"
                app:layout_constraintBottom_toBottomOf="@id/sendBtn"/>
            <TextView
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:gravity="center"
                android:background="@drawable/round_yellow"
                android:id="@+id/sendBtn"
                android:textColor="@color/common_text_black"
                android:text="发送"
                android:layout_marginBottom="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
        </org.qiah.balabala.util.RoundConstraintLayout>
    </org.qiah.balabala.util.RoundConstraintLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/emojiRv"
        android:visibility="gone"
        app:layout_constraintHeight_percent="0.3"
        app:layout_constraintTop_toBottomOf="@id/actionRcl"
        app:layout_constraintBottom_toBottomOf="parent">
    </androidx.recyclerview.widget.RecyclerView>
</androidx.constraintlayout.widget.ConstraintLayout>