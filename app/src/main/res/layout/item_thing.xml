<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp"
    android:layout_height="wrap_content">
    <org.qiah.balabala.util.RoundConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:round_corner="12dp"
        android:background="@drawable/round_thing"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_marginEnd="2dp"
            android:scaleType="fitXY"
            android:src="@drawable/aaa"
            app:layout_constraintWidth_percent="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <View
            android:layout_width="4dp"
            android:layout_height="0dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:background="@color/deep_pink"
            android:id="@+id/lineView1"
            android:elevation="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/lineView">
        </View>
        <org.qiah.balabala.widget.BoldTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="个人事件"
            android:textSize="25sp"
            android:elevation="4dp"
            android:textColor="@color/common_text_black"
            app:layout_constraintStart_toEndOf="@id/lineView1"
            app:layout_constraintTop_toTopOf="@id/lineView1"
            app:layout_constraintBottom_toBottomOf="@id/lineView1"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/thing_grey"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:id="@+id/lineView"
            android:elevation="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <org.qiah.balabala.widget.BoldTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:elevation="4dp"
            android:background="@drawable/round_deep_pink_12"
            android:text="前往的个人剧情"
            android:textColor="@color/common_text_white"
            android:gravity="center"
            android:textSize="20sp"
            android:id="@+id/aTv"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            app:layout_constraintTop_toBottomOf="@id/lineView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
    </org.qiah.balabala.util.RoundConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>