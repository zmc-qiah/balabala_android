<?xml version="1.0" encoding="utf-8"?>
<org.qiah.balabala.util.RoundConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    app:round_corner_top="12dp"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:id="@+id/topIv"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/gg_top"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/round_white_12"
        android:elevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/topIv"
        android:layout_marginTop="50dp"
        android:id="@+id/aNv"
        app:layout_constraintTop_toTopOf="@id/topIv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.87"
        app:layout_constraintHeight_percent="0.7">
        <org.qiah.balabala.util.RoundConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:round_corner="12dp">
            <org.qiah.balabala.widget.MidTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="对话名称"
                android:layout_margin="12dp"
                android:id="@+id/nameIv"
                android:textColor="@color/common_text_black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <EditText
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:gravity="center"
                android:id="@+id/nameEt"
                android:hint="请输入"
                android:textColorHint="@color/common_text_white"
                android:textColor="@color/common_text_white"
                app:layout_constraintTop_toTopOf="@id/nameIv"
                app:layout_constraintBottom_toBottomOf="@id/nameIv"
                android:background="@drawable/bg_create_input"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/nameIv"/>
            <org.qiah.balabala.widget.MidTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择对话妮姬（至少选一个后续可填加）"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_margin="12dp"
                android:id="@+id/aTv"
                android:textColor="@color/common_text_black"
                app:layout_constraintTop_toBottomOf="@id/nameEt"/>
            <org.qiah.balabala.util.RoundConstraintLayout
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_margin="12dp"
                android:id="@+id/searchRCL"
                android:background="@drawable/round_white"
                android:elevation="8dp"
                app:round_as_circle="true"
                app:layout_constraintTop_toBottomOf="@id/aTv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <org.qiah.balabala.widget.IconFont
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/searchIcon"
                    android:textSize="@dimen/small_icon_size"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="6dp"
                    android:text="@string/icon_search"
                    android:textColor="@color/icon_grey"/>
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:hint="输入妮姬名称或所属企业"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="4dp"
                    android:background="@color/transparent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/searchIcon"
                    app:layout_constraintEnd_toStartOf="@id/searchBtn"
                    android:id="@+id/searchEt"/>
                <org.qiah.balabala.widget.BoldTextView
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginEnd="6dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:background="@drawable/bg_search_btn"
                    android:id="@+id/searchBtn"
                    android:textColor="@color/common_text_white"
                    android:text="搜索"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />
            </org.qiah.balabala.util.RoundConstraintLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:spanCount="4"
                android:layout_margin="12dp"
                android:id="@+id/nikkeAvatarRv"
                app:layout_constraintTop_toBottomOf="@id/searchRCL"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </org.qiah.balabala.util.RoundConstraintLayout>
    </androidx.core.widget.NestedScrollView>
    <org.qiah.balabala.util.RoundConstraintLayout
        android:layout_width="120dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/aNv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="4dp"
        app:round_corner="6dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/btn_bg"
            android:id="@+id/createIv"/>
        <org.qiah.balabala.widget.BoldTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="创建"
            android:id="@+id/tTv"
            android:textColor="@color/common_text_white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </org.qiah.balabala.util.RoundConstraintLayout>

</org.qiah.balabala.util.RoundConstraintLayout>